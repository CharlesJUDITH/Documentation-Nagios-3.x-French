msgstr "Cette option détermine quel type d'information Nagios doit écrire dans <xref linkend=\"configuringnagios-configmain-debug_file\" />. Les valeurs possibles sont les suivantes:"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4614
msgid "-1 = Log everything"
msgstr "-1 = Tout logguer"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4618
msgid "0 = Log nothing (default)"
msgstr "0 = Ne rien logguer (par défaut)"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4622
msgid "1 = Function enter/exit information"
msgstr "1 = Les informations des fonctions d'I/O"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4626
msgid "2 = Config information"
msgstr "2 = Les informations liées à la configuration"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4630
msgid "4 = Process information"
msgstr "4 = Les informations liées aux exécutions"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4634
