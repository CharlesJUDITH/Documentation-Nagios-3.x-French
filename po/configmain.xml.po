msgstr "0 = Information de base"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4683
msgid "1 = More detailed information (default)"
msgstr "1 = Information plus détaillée (par défaut)"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4687
msgid "2 = Highly detailed information"
msgstr "2 = Information très détaillée"

