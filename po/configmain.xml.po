msgstr "8 = Les informations liées au planification des évènements"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4638
msgid "16 = Host/service check information"
msgstr "16 = Les informations liées aux hôtes et aux services"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4642
msgid "32 = Notification information"
msgstr "32 = Les informations sur les notifications"

# type: Content of: <chapter><section><section><itemizedlist><listitem><para>
#: ConfiguringNagios/configmain.xml:4646
msgid "64 = Event broker information"
msgstr "64 = Les informations liées au courtier d'évènement"

