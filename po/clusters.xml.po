"define command{\n"
"\tcommand_name    check_host_cluster\n"
"\tcommand_line    /usr/local/nagios/libexec/check_cluster --host -l $ARG1$ -w $ARG2$ -c $ARG3$ -d $ARG4$\n"
"\t}"
msgstr ""
