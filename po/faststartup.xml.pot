#: SecurityAndPerformanceTuning/faststartup.xml:202
msgid "-u"
msgstr ""

# type: Content of: <chapter><section><informaltable><tgroup><tbody><row><entry><para>
#: SecurityAndPerformanceTuning/faststartup.xml:202
msgid "command line option."
msgstr ""

# type: Content of: <chapter><section><informaltable><tgroup><tbody><row><entry><para><screen>
#: SecurityAndPerformanceTuning/faststartup.xml:202
